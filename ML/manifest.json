{
  "manifest_version": 3,
  "name": "Hate Speech Detection Extension",
  "description": "A Chrome extension that predicts whether a statement is considered to be Hate Speech or Not HateSpeech",
  "version": "1.0",
  "icons": {
    "16": "img/icon16.jpg",
    "48": "img/icon48.jpg",
    "128": "img/icon128.jpg"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://127.0.0.1:5000/"
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
